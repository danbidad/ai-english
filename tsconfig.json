{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": ["node", "jest"],
    "compileOnSave": false
  },
  "ts-node": {
    "esm": true
  },
  "include": ["server/**/*"],
  "exclude": ["**/dist" ,"**/node_modules"]
}
